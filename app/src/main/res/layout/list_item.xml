<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:orientation="horizontal"
    android:padding="16dp"

    tools:background="@android:color/background_light">

    <LinearLayout
        android:id="@+id/linear_layout_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_tittle"
            style="@style/text_tittle"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:scrollHorizontally="true"
            tools:text="El tunnel" />

        <TextView
            android:id="@+id/text_author"
            style="@style/text_author"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            tools:text="Ernesto Sabato" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/text_price_amount"
        android:includeFontPadding="false"
        android:textColor="@android:color/holo_blue_dark"
        tools:text="ARS" />

    <TextView
        android:id="@+id/text_price_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:includeFontPadding="false"
        android:textColor="@android:color/holo_blue_dark"
        tools:text="386.77" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            tools:text="4.7" />

        <ImageView
            android:id="@+id/image_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            tools:src="@drawable/round_star_rate_black_18" />

    </LinearLayout>

</RelativeLayout>
